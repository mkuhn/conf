[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = blue reverse
        local = blue
        remote = green

[color "diff"]
        meta = blue
        frag = magenta
        old = red
        new = green
        whitespace = white

[color "status"]
        added = blue
        changed = green
        untracked = cyan

[core]
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[apply]
        whitespace = fix

[alias]
        st = status
        ci = commit
        co = checkout
        w = whatchanged        